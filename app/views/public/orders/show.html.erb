<h1>注文履歴詳細</h1>
  <h5>注文情報</h5>
<table class="table table-bordered ">
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y年%m月%d日') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.post %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
		<th>支払い方法</th>
		<td><%= @order.payment_i18n %></td>
	</tr>
	<tr>
		<th>ステータス</th>
		<td><%= @order.order_status_i18n %></td>
	</tr>
</table>

<h5>請求情報</h5>
<table class="table table-bordered ">
	<tbody>
		<tr>
			<th>商品合計</th>
			<td><%= @sum = (@order.payment_price - @order.postage) %></td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.postage %></td>
		</tr>
		<tr>
		  <th>ご請求額</th>
		  <td><%= @order.payment_price %></td>
		</tr>
	</tbody>
</table>

<h5>注文内容</h5>
<table class="table table-bordered ">
  <thead>
    <tr>
      <th>商品</th>
    	<th>単価（税込）</th>
    	<th>個数</th>
    	<th>小計</th>
    </tr>
  </thead>
  <tbody>
  <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= (order_detail.item.price * 1.08).to_i %></td>
    <td><%= order_detail.quantity %></td>
    <td><%= (order_detail.item.price * 1.08).to_i * order_detail.quantity  %></td>
  </tr>
  <% end %>
  </tbody>
</table>
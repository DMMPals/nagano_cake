<div class="container">
  <div class="row">
    <div class="col-6 mx-auto ">
    <h2>商品一覧</h2>
    </div>
  </div>
 <% @items.each do |item| %>
            
    <table class="table table-striped">
        <tr>
           
            <th><%= link_to public_item_path(item) do %>
            <% if item.image.attached? %>
            <%= image_tag item.image %>
            <% else %>
            <%= image_tag 'no_image.jpeg'%>
            <% end %>
    <% end %>
            
           </th>
                   
         </tr>
         <tr>
            <th><%= link_to item.name, public_item_path(item) %></th>
        
         </tr>
         <tr>
            
            <th>￥<%= (item.price * 1.08).to_i %></th>
        
        </tr>
    </table>
 </div>
  </div>
        
 <% end %>
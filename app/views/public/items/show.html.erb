
<div class="item_image">
    <% if @item.image.attached? %>
    <%= image_tag @item.image %>
    <% else %>
    <%= image_tag 'no_image.jpeg' %>
    <% end %>
</div>
    
    
<div class="item_info">
  <h2><%= @item.name %></h2>
  <p><%= @item.explain %></p>
  <h3>￥<%= (@item.price * 1.08).to_i %><o>（税込）</p></h3>
  <%= form_with(model: @cart_item, url: public_cart_items_path, local: true) do |f| %>
		      <%= f.number_field :quantity, min: 1, max: 100, placeholder: '個数選択'%>
		      <%= f.hidden_field :item_id, :value => @item.id %>
		      <%= f.submit "カートに入れる"%>
		    <% end %>
</div>


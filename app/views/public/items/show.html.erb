<div class="item_image">
    <% if @item.image.attached? %>
    <%= image_tag @item.image %>
    <% else %>
    <%= image_tag 'no_image.jpeg' %>
    <% end %>
</div>
    
    
<div class="item_info">
  <h2><%= @item.name %></h2>
  <p><%= @item.explain %></p>
  <h3>￥<%= (@item.price * 1.08).to_s(:delimited) %><span>（税込）</span></h3>
</div>


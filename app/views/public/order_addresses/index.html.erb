<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h3 class="mt-3">お客様の配送先一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="row">宛名</th>
            <th scope="row">郵便番号</th>
            <th scope="row">配送先住所</th>
            <th scope="row"></th>
            <th scope="row"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.order_name %></td>
              <td><%= address.post %></td>
              <td><%= address.address %></td>
              <td><%= link_to "編集", edit_public_order_address_path(address), class: "btn btn-outline-success btn-sm" %></td>
              <td><%= link_to "削除", public_order_address_path(address), method: :delete, data: { confirm: '本当に消しますか？' },class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mx-auto col-6">
        <h3>配送先新規作成</h3>
        <% if @address.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@address.errors.count, "error") %> 件のエラーが発生しました。</h3>
            <ul>
              <% @address.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model: @address, url: public_order_addresses_path, method: :post do |f| %>
          <%= f.label "ご配送先の宛名", class: "form-label" %>
            <%= f.text_field :order_name, class: "form-control" %>

          <%= f.label "郵便番号", class: "form-label mt-2" %>
            <%= f.text_field :post, class: "form-control" %>

          <%= f.label "ご配送先の住所", class: "form-label mt-2" %>
            <%= f.text_area :address, class: "form-control" %>

          <%= f.submit "新規作成", class: "btn btn-outline-success btn-sm btn-block mt-2" %>
        <% end %>
        <%= link_to "マイページ", public_my_page_path, class: "btn btn-outline-secondary btn-sm btn-block mt-2" %>
      </div>
    </div>
  </div>
</div>
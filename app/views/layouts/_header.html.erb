<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/public"><%= image_tag 'Nagano Cake.png', class: "img-fluid" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <p id="notice" class='my-auto text-dark'><%= notice %></p>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li>
            <%= link_to public_my_page_path(current_customer), class: 'nav-link text-dark' do %>
              <i class="fas fa-user"></i> マイページ
            <% end %>
          </li>
          <li>
            <%= link_to public_items_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-stroopwafel"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to public_cart_items_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-cart-arrow-down"></i> カート
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to public_items_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-stroopwafel"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to public_about_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-link"></i> お店の概要
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path ,class: 'nav-link text-dark' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
      <form class="ml-auto">
        <div class="form-inline">
          <input class="form-control" placeholder="商品検索">
          <button type="button" class="btn btn-light">検索</button>
        </div>
      </form>
    </div>
  </nav>
</header>
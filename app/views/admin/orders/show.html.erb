<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-12'>
     <h4 class="mt-4 bg-light text-dark"><strong>注文履歴詳細</strong></h4>
      <table class='table table-hover table-inverse' >
        <thead>
          <tr>
            <th>購入者</th>
            <th>注文日</th>
            <th>配送先</th>
            <th>支払い方法</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

      <tbody>
          <tr>
            <th><%= link_to admin_customer_path(@order) do %>
                  <%= @order.customer.surname %><%= @order.customer.name %>
                <% end %></th>
            <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
            <th><%= @order.address %></th>
            <th><%= @order.payment_i18n %></th>
            <th><%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
                  <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false} %>
                  <%= f.submit "更新" , class: "btn btn-outline-success" %>
                <% end %></th>
          </tr>
      </tbody>
    </div>
  </div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
  　　    　<tr>
            <td>商品名</td>
            <td>単価（税込）</td>
            <td>数量</td>
            <td>小計</td>
            <td>制作ステータス</td>
          </tr>
        </thead>

        <tbody>
          <% @order.order_details.each do |order_detail| %>
  　　    　<tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.sale_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= @total.to_s(:delimited) %>円</td>
                <%= form_with model: order_detail, url:admin_order_detail_path(order_detail.id), method: :patch do |f| %>
            <td><%= f.select :item_status, OrderDetail.item_statuses_i18n.invert %>
                <%= f.submit "更新", class: "btn btn-outline-light bg-success" %></td>
                <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
    <div class="col-4">
      <table cellPadding=10>
      <table>
        <tr>
          <th><h4><strong>商品合計</strong></h4></th>
          <td><h6><%= @total.to_s(:delimited) %>円</h6></td>
        </tr>
        <tr>
          <th><h4><strong>送料</strong></h4></th>
          <td><h6><%= @order.postage.to_s(:delimited) %>円</h6></td>
        </tr>
        <tr>
          <th><h4><strong>請求金額合計</strong></h4></th>
          <td><h6><strong><%= @order.payment_price.to_s(:delimited) %>円</strong></h6></td>
        </tr>
      </table>
     </div>
    </div>
  </div>
<div class="container">
  <div class="row">
    <div class="col-6 mx-auto text-center">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <% if @genre.errors.any? %>
        空白では登録できません。
      <% end %>


    <%= form_for(@genre, url: admin_genres_path) do |f| %>
      <div class="form-group">
        <%= f.label :name, "ジャンル名", class: 'font-weight-bold' %>
        <%= f.text_field :name, class: 'ml-5' %><br>
        <%= f.submit '新規登録', class: 'btn btn-success ml-5' %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <table class="table table-hover">
        <thead class = "thead-light">
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
            <td><%= link_to '削除', admin_genre_path(genre), method: :delete, data: {confirm: "削除しますか？"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


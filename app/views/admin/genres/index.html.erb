<h1>ジャンル一覧・追加</h1>

<% if @genre.errors.any? %>
  空白では登録できません。
<% end %>


<%= form_for(@genre, url: admin_genres_path) do |f| %>
    <%= f.label :ジャンル名 %><br>
    <%= f.text_field :name %><br>
    <%= f.submit '新規登録' %>
 <% end %>


 <h2>ジャンル一覧</h2>
  <tbody>
    <% @genres.each do |genre| %>
     <td><%= genre.name %></td>
     <td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
     <td><%= link_to '削除', admin_genre_path(genre), method: :delete, data: {confirm: "削除しますか？"} %></td>
    <% end %>
  </tbody>


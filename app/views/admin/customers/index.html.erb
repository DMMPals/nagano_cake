<h2>会員一覧</h2>
  <table>
    <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer) do %></td>
            <td><%= customer.surname %>  <%= customer.name %></td>
            <td><%= customer.email %></td>
            <% end %>
          </tr>
        <% end %>
    </tbody>
  </table>